# Template file for 'Pale Moon'
pkgname=palemoon
version=29.4.0
revision=1

_uxpver=20210817

wrksrc="pale-moon"
hostmakedepends="curl autoconf213 unzip zip pkg-config perl python yasm tar which"
makedepends="python-devel libatomic-devel gtk+-devel libXt-devel alsa-lib-devel
 libvpx-devel ffmpeg-devel libpng-devel"
depends="desktop-file-utils hicolor-icon-theme mime-types"
short_desc="UXP-based web browser"
maintainer="biopsin <biopsin@yahoo.no>"
license="MPL-2.0, GPL-2.0-or-later, LGPL-2.1-or-later"
homepage="https://www.palemoon.org"
distfiles="https://repo.palemoon.org/MoonchildProductions/Pale-Moon/archive/${version}_Release.tar.gz"
checksum=949a3aa8d857be1078aa27a73b134026f11c3e60ef1e790ff507dbec5d952164
python_version=2
lib32disabled=yes

post_extract() {
	[ ! -f "${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_uxpver}.tar.gz" ] && \
		curl -o ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_uxpver}.tar.gz \
		https://repo.palemoon.org/MoonchildProductions/UXP/archive/RELBASE_${_uxpver}.tar.gz
	tar --strip-components=1 -xvzf ${XBPS_SRCDISTDIR}/${pkgname}-${version}/${_uxpver}.tar.gz -C platform
}

do_patch() {
	cp "${FILESDIR}/mozconfig" "${wrksrc}/.mozconfig"
	mkdir -p /usr/lib/palemoon

	for p in ${FILESDIR}/*.patch; do
		patch -p0 -i $p
	done
}

post_configure() {
	vsed -i 's|xlocale|locale|' platform/intl/icu/source/i18n/digitlst.cpp
	vsed -i 's|NSS_ALLOW_SSLKEYLOGFILE=1|NSS_ALLOW_SSLKEYLOGFILE=0|' \
		platform/config/external/nss/Makefile.in
	vsed -i 's|enable_sslkeylogfile==1|enable_sslkeylogfile==0|' \
		platform/security/nss/lib/ssl/ssl.gyp
}

do_build() {
	export CPPFLAGS="${CPPFLAGS} -O2 -Wno-format-overflow"
	export LDFLAGS+=" -Wl,-rpath=/usr/lib/palemoon"
	export MOZ_MAKE_FLAGS="${makejobs}"

	./mach build
}

do_install() {
	DESTDIR="$DESTDIR" ./mach install

	for i in 16x16 32x32 48x48; do
		vinstall ${wrksrc}/palemoon/branding/unstable/default${i%x*}.png 644 \
			usr/share/icons/hicolor/${i}/apps palemoon.png
	done

	vinstall ${wrksrc}/palemoon/branding/official/palemoon.desktop 644 usr/share/applications

	# https://bugzilla.mozilla.org/show_bug.cgi?id=658850
	ln -sf palemoon ${DESTDIR}/usr/lib/palemoon/palemoon-bin

	# Remove the devel and etc
	rm -r ${DESTDIR}/usr/{include,lib/palemoon-devel,share/idl}
	rm -r ${DESTDIR}/usr/lib/palemoon/browser/{defaults,icons,searchplugins}
	rm ${DESTDIR}/usr/lib/palemoon/run-mozilla.sh
}
