# Template file for 'dmenu-git'
pkgname=dmenu-git
version=4.6
revision=1
_commit=7a998501e86790526b7ee4abbbf800175be9423d
wrksrc="dmenu-overkill-${_commit}"
makedepends="libXinerama-devel libXft-devel freetype-devel"
short_desc="Generic menu for X"
maintainer="Juan RP <xtraeme@voidlinux.org>"
license="MIT"
homepage="https://tools.suckless.org/dmenu/"
distfiles="https://github.com/duckwork/dmenu-overkill/archive/${_commit}.tar.gz"
checksum=8b2cb8ec9fd684dc2d888cd33e16b7a514eb50303a41e90520d02e27afd6a57a

post_extract() {
	sed -e '/CFLAGS/{s/-Os//;s/=/+=/}' \
		-e '/LDFLAGS/{s/-s//;s/=/+=/}' -i config.mk
	sed -e "s|/usr/X11R6/|/usr/|g" -i config.mk
}

do_install() {
	make PREFIX=/usr DESTDIR=${DESTDIR} install
	vlicense LICENSE
}
