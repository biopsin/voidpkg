post_extract() {
	vsed 's|#SYSTEMD ?= 0|SYSTEMD ?= 0|' -i config.mk
	vsed 's|# WAYLAND ?= 0|WAYLAND ?= 0|' -i config.mk
}

post_install() {
	vlicense LICENSE
}
